<style>
body{
    background-color: #525252;
}

h4 {
 border:0 solid #fff;
 border-bottom-width:1px;
 padding-bottom:10px;
 text-align: center;
}

.form-control {
  border-radius: 10px;
}
.jumbotron{
  background-color: #EDEDED;
  padding-top: 10px;
  padding-bottom: 20px;
  padding-left: 20px;
  padding-right: 20px;
  border-radius: 15px;
  border-color:#d2d2d2;
  border-width: 5px;
  box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
  background: rgba(255, 255, 255, 0.8);
}

</style>


<div class="container">
  <div class="row jumbotron">
    <div class="col-sm-6">
      <ol><h1>Top Users:</h1>
        <% @organization.top_users.each do |user| %>
          <li><%= link_to "#{user}", User.find_by(name: user) %></li>
        <% end %>
      </ol>
    </div>
    <div class="col-sm-6">
      <ol><h1>Hot Locations:</h1>
        <% @organization.top_locations.each do |location| %>
          <li><%= link_to "#{location}", Location.find_by(name: location) %></li>
        <% end %>
      </ol>
    </div>
  </div>
  <div class="jumbotron">
    <%= button_to "Add Plans", new_plan_path, {method: "get", class: "plan"}%>
    <div class="row">
      <div class="col-sm-6">
        <h1 style="text-align: center;">Upcoming: </h1>
        <% if current_user %>
          <% current_user.plans.sort_by(&:timing).each do |plan| %>
            <%= button_to plan.summary(current_user), plan_path(plan), {method: "get", class: "plan"} %>
          <% end %>
        <% else %>
          Not logged in!
        <% end %>
      </div>
      <div class="col-sm-6">
        <h1 style="text-align: center;">Available: </h1>
        <% @organization.plans.sort_by(&:timing).each do |plan| %>
          <% if current_user %>
            <% if plan.front_page?(current_user) %>
              <%= button_to plan.summary, plan_path(plan), {method: "get", class: "plan"} %>
            <% end %>
          <% else %>
              <%= button_to plan.summary, plan_path(plan), {method: "get", class: "plan"} %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
