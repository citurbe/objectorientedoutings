<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
<br>
  <%= f.label :email %>
  <%= f.email_field :email %>
<br>
  <%= f.label :password %>
  <%= f.password_field :password %>
<br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
<br>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
<br>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>
<br>
  <%= f.label "Organization: " %>
  <%= f.select :organization_id, @organizations.collect{|org| [org.name, org.id]}, include_blank: true %>
<br>
  <%= f.submit "Logup" %>
<br>
<% end %>
